<h3>Criando lote para leilão</h3>

<div class="alert alert-danger" role="alert">
<% if(@auction_lot.errors.any?) %>
  <p> Verifique os erros abaixo: </p>
  <ul>
    <% @auction_lot.errors.full_messages.each do |msg| %>
      <li><%= msg %> </li>
      <% end %>
  </ul>
<% end %>
</div>

<%= form_with(model: @auction_lot, class: "row g-3") do |f| %>
    <div class="col-md-6">
      <%= f.label :code, 'Código do Leilão', class: "form-label" %>
      <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :end_date, 'Data final do lote', class: "form-label" %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :diff_value, 'Valor diferença de lance', class: "form-label" %>
      <%= f.number_field :diff_value, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :minimum_value, 'Valor mínimo', class: "form-label" %>
      <%= f.number_field :minimum_value, class: "form-control" %>
    </div>
    <div class="col-12">
      <%= f.submit 'Enviar', class: "btn btn-primary" %>
    </div>
<% end %>