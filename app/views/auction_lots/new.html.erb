<div class="container mt-4">
  <h3>Criando lote para leil√£o</h3>

  <%= link_to 'Voltar', root_path, class: "btn btn-secondary mr-2 mt-3 mr-auto mb-4" %>


  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>

  <% if(@auction_lot.errors.any?) %>
    <div class="alert alert-danger" role="alert">
      <p> Verifique os erros abaixo: </p>
      <ul>
        <% @auction_lot.errors.full_messages.each do |msg| %>
          <li><%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @auction_lot, class: "row g-3") do |f| %>
    <div class="col-md-6 mt-3">
      <%= f.label :code, class: "form-label" %>
      <%= f.text_field :code, class: "form-control", size: 10, style: "width: 150px;" %>
    </div>
    <div class="col-md-6 mt-3">
      <%= f.label :minimum_value, class: "form-label" %>
      <%= f.number_field :minimum_value, class: "form-control", size: 10, style: "width: 150px;" %>
    </div>
    <div class="col-md-6 mt-3">
      <%= f.label :end_date, class: "form-label" %>
      <%= f.date_field :end_date, class: "form-control", size: 10, style: "width: 150px;" %>
    </div>
    <div class="col-md-6 mt-3">
      <%= f.label :diff_value, class: "form-label" %>
      <%= f.number_field :diff_value, class: "form-control", size: 10, style: "width: 150px;" %>
    </div>
    <div class="col-md-6 mt-3">
      <%= f.label :start_date, class: "form-label" %>
      <%= f.date_field :start_date, class: "form-control", size: 10, style: "width: 150px;" %>
    </div>

    <div class="col-12 mt-3">
      <%= f.submit 'Enviar', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>