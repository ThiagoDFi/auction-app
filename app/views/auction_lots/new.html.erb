<h3>Criando de lote para leilão</h3>

<%= form_with(model: @auction_lot) do | f |%>

<%= form_for @auction_lot do |f| %>
  <%= f.label :product_id %>
  <%= f.collection_check_boxes :product_id, Product.all, :id, :name %>


  <div>
    <%= f.label :code, 'Código do Leilão'%>
    <%= f.text_field :code %>
  </div>
  <div>
    <%= f.label :end_date, 'Data final do lote' %>
    <%= f.date_field :end_date %>
  </div>

  <div>
    <%= f.label :minimum_value, 'Valor minimo' %>
    <%= f.number_field :minimum_value%>
  </div>

  <div>
    <%= f.label :diff_value, 'Valor diferença de lance' %>
    <%= f.number_field :diff_value %>
  </div>

  <div>
    <%= f.submit 'Enviar' %>
  </div>
  <% end %>
<% end %>