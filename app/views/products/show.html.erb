<div class="container">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <% if alert %>
  
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <h1 class="text-center">Produto: </h1>
      <dl class="dl-horizontal">
        <dt>Nome:</dt>
        <dd><%= @product.name %></dd>
        <dt>Descrição:</dt>
        <dd><%= @product.description %></dd>
        <dt>Peso:</dt>
        <dd><%= @product.weight %>g</dd>
        <dt>Dimensão:</dt>
        <dd><%= dimension(@product.height, @product.width, @product.depth) %></dd>
        <dt>Categoria:</dt>
        <dd><%= @product.category %></dd>
        <dt>SKU:</dt>
        <dd><%= @product.code %></dd>
        <dt>Status:</dt>
        <dd><%= I18n.t(@product.status) %></dd>
      </dl>
    </div>
    <% if @product.photo.attached? %>
      <div class="col-md-6">
        <%= image_tag(@product.photo, class: "img-thumbnail") %>
      </div>
    <% end %>
  </div>
    <%= link_to 'Editar', edit_product_path, class:"btn btn-primary" %>
</div>
