<div class="container">
  <h1 class="text-center">Lotes para Leil√£o</h1>
  
  <div class="row">
    <% @auction_lots.each do |lot| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%= image_tag(lot.product.photo, class: "card-img-top", alt: "product image") %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to lot.code, lot %></h5>
            <p class="card-text"><%= lot.product.description %></p>
            <%= link_to 'Dar Lance', lot, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>